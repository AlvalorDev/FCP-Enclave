    <!--__________ Precepts __________-->

    <PreceptDef>
        <defName>FCP_Precept_Role_EnclaveOfficer</defName>
        <issue>IdeoRole</issue>
        <label>Enclave Officer</label>
        <description>An elite officer of the Enclave, trained in leadership and advanced combat tactics. They excel at research, combat, and maintaining discipline.</description>
        <impact>High</impact>
        <displayOrderInImpact>100</displayOrderInImpact>
        <conflictingMemes>
            <li>Individualist</li>
        </conflictingMemes>
        <statFactors>
            <ResearchSpeed>1.25</ResearchSpeed>
            <ShootingAccuracyPawn>1.15</ShootingAccuracyPawn>
            <SocialImpact>1.20</SocialImpact>
        </statFactors>
        <associatedMemes>
            <li>FCP_Meme_EnclaveManifestDestiny</li>
        </associatedMemes>
        <roleRequiredWorkTags>
            <li>Intellectual</li>
            <li>Social</li>
        </roleRequiredWorkTags>
        <grantedAbilities>
            <li>LeaderSpeech</li>
        </grantedAbilities>
    </PreceptDef>

    <IdeoRoleRequirementDef>
        <defName>FCP_Role_Requirement_EnclaveOfficer</defName>
        <label>Enclave Officer</label>
        <description>Officers must wear regulation Enclave uniforms or power armor.</description>
        <apparelRequired>
            <li>FCP_Enclave_Apparel</li>
            <li>FCP_Enclave_Power_Armor</li>
        </apparelRequired>
    </IdeoRoleRequirementDef>

</Defs>